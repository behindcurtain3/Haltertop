<div class="userbar">
  <%= image_for current_user %>
  <p><%= current_user.name %><br />
    <span class="light small">Member For: <%= time_ago_in_words( current_user.created_at ) %></span>
  </p>
  <p>Played: <%= pluralize(current_user.games.count, "match") %></p>
  <p>Friends:</p>
  <ul class="friend_list">
  <% @friends.each do | f | %>
    <li><%= link_to f do %><%=  image_for f %><% end %></li>
  <% end %>
  </ul>
</div>